<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flores"
    tools:context=".AddCardActivity">


    <Button
        android:id="@+id/cancelButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="51dp"
        android:background="@drawable/ic_cancelbutton"
        android:elevation="0dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="399dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="51dp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="48dp"
        android:layout_height="49.5dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/cancelButton"
        android:layout_marginStart="51dp"
        android:background="@drawable/ic_savebutton"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="399dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="51dp" />


    <EditText
        android:id="@+id/editQuestion"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/card_background3"
        android:fontFamily="@font/inknut_antiqua"
        android:hint="@string/editQuestion"
        android:textColorHint="#d6d4d4"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#d6d4d4"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/editCorrect"
        android:layout_width="385dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="275dp"
        android:background="@drawable/rounded_corner_gradient"
        android:fontFamily="@font/inknut_antiqua_light"
        android:hint="@string/editCorrect"
        android:textColorHint="#d6d4d4"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#d6d4d4"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/editWrong1"
        android:layout_width="385dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="215dp"
        android:background="@drawable/rounded_corner_gradient"
        android:fontFamily="@font/inknut_antiqua_light"
        android:hint="@string/editWrong1"
        android:textColorHint="#d6d4d4"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#d6d4d4"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/editWrong2"
        android:layout_width="385dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="155dp"
        android:background="@drawable/rounded_corner_gradient"
        android:fontFamily="@font/inknut_antiqua_light"
        android:hint="@string/editWrong2"
        android:textColorHint="#d6d4d4"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#d6d4d4"
        android:textSize="16sp"
        android:textStyle="italic"
        android:gravity="center_horizontal"
        android:layout_alignParentLeft="true" />




</RelativeLayout>